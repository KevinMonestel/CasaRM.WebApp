@model HostManagmentViewModel

@{
    ViewData["Title"] = "Administrar huésped";
}

<h1 class="h1 mb-3"><strong>Huéspedes</strong> Administración</h1>

@if(Model.WasManaged){
    <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <div class="alert-message">
            ¡El formulario ha sido guardado con éxito!
        </div>
    </div>
}

<div class="my-3">
    <strong>Código de registro del huésped: </strong> <span>@Model.HostId</span>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Estudio Social</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Formulario de estudio social del huésped</p>
                <a href="@Url.Action("Manage", "SocialStudy", new { host = Model.HostId, area = "Hosts" })" class="btn btn-primary">Ir al formulario</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Historial de hospedaje</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Historial de Hospedaje del huésped</p>
                <a href="@Url.Action("Index", "History", new { host = Model.HostId, area = "Hosts" })" class="btn btn-primary">Ir al registro</a>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Documentos</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 border-end">
                        <p class="card-text">
                            <strong>
                                Aceptación Normas y Obligaciones por parte de los Residentes
                                Casa Ronald McDonald Costa Rica
                            </strong>
                        </p>
                        <a href="@Url.Action("Index", "Documents", new { host = Model.HostId, document = 1, area = "Hosts" })" class="btn btn-outline-primary">Ver documento</a>
                    </div>

                    <div class="col-md-4 border-end">
                        <p class="card-text">
                            <strong>
                                Autorización Divulgación e Intercambio de Información
                            </strong>
                        </p>
                        <a href="@Url.Action("Index", "Documents", new { host = Model.HostId, document = 2, area = "Hosts" })" class="btn btn-outline-primary">Ver documento</a>
                    </div>

                    <div class="col-md-4">
                        <p class="card-text">
                            <strong>
                                FUNDACIÓN INFANTIL RONALD MCDONALD DE COSTA RICA
                                CONCESIÓN, CESIÓN, LIBERACIÓN Y RENUNCIA
                            </strong>
                        </p>
                        <a href="@Url.Action("Index", "Documents", new { host = Model.HostId, document = 3, area = "Hosts" })" class="btn btn-outline-primary">Ver documento</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
