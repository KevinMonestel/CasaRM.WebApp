@model HostingHistoryManageViewModel

@{
    ViewData["Title"] = "Boleta de recibimiento y entrega";
}

<h1 class="h1 mb-3"><strong>Huéspedes</strong> Boleta de entrega y recibimiento</h1>

<div class="tab">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item" role="presentation"><a class="nav-link active" href="#tab-1" data-bs-toggle="tab" role="tab" aria-selected="true">Boleta de Entrega</a></li>
        <li class="nav-item" role="presentation"><a class="nav-link" href="#tab-2" data-bs-toggle="tab" role="tab" aria-selected="false" tabindex="-1">Boleta de Recibimiento</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active show" id="tab-1" role="tabpanel">
            <p class="text-center">
                Formulario para la boleta de entrega
                @if (Model.HistoryTicketDelivery.Id.Equals(0))
                {
                    <span class="text-danger">(Este formulario aún no ha sido guardado)</span>
                }
            </p>
            <partial name="~/Areas/Hosts/Views/History/Partials/_HistoryTicketDeliveryForm.cshtml" model="@Model.HistoryTicketDelivery" />
        </div>
        <div class="tab-pane" id="tab-2" role="tabpanel">
            @if (Model.HistoryTicketDelivery.Id.Equals(0))
            {
                <div class="alert alert-warning alert-outline" role="alert">
                    <div class="alert-icon">
                        <i data-feather="info"></i>
                    </div>
                    <div class="alert-message">
                        Este formulario no se puede mostrar debido a que la boleta de entrega no ha sido llenada
                    </div>
                </div>
            }
            else
            {
                <p class="text-center">
                    Formulario para la boleta de recibimiento
                    @if (Model.HistoryTicketReception.Id.Equals(0)){
                        <span class="text-danger">(Este formulario aún no ha sido guardado)</span>
                    }
                </p>
                <partial name="~/Areas/Hosts/Views/History/Partials/_HistoryTicketReceptionForm.cshtml" model="@Model.HistoryTicketReception" />
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}