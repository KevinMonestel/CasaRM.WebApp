@using CasaRM.WebApp.Shared.Models.Catalog
@model CompanionDataFormViewModel
@inject ApplicationCatalog _appCatalogs

@{
}

<form id="companionDataForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" aria-required="true" />
                <label asp-for="FullName" class="form-label">Nombre Completo</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input asp-for="Identification" class="form-control" aria-required="true" />
                <label asp-for="Identification" class="form-label">Identificación</label>
                <span asp-validation-for="Identification" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="Relationship" class="form-label text-muted text-sm">Parentesco</label>
                <select class="form-select" asp-for="Relationship">
                    @foreach (CatalogDto catalog in _appCatalogs.Relationships)
                    {
                        <option value="@catalog.Description">@catalog.Description</option>
                    }
                </select>
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-floating mb-3">
                <input asp-for="DateOfBirth" class="form-control" aria-required="true" max="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.AddYears(-100).ToString("yyyy-MM-dd")" />
                <label asp-for="DateOfBirth" class="form-label">Fecha de Nacimiento</label>
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-floating mb-3">
                <input asp-for="Age" class="form-control" aria-required="true" readonly />
                <label asp-for="Age" class="form-label">Edad</label>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="mb-3">
                <label asp-for="Gender" class="form-label text-muted text-sm">Sexo</label>
                <select class="form-select" asp-for="Gender">
                    @foreach (CatalogDto catalog in _appCatalogs.Genders)
                    {
                            <option value="@catalog.Description">@catalog.Description</option>
                    }
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-3">
            <div class="mb-3">
                <label asp-for="MaritalStatus" class="form-label text-muted text-sm">Estado Civil</label>
                <select class="form-select" asp-for="MaritalStatus">
                    @foreach (CatalogDto catalog in _appCatalogs.MaritalStatuses)
                    {
                        <option value="@catalog.Description">@catalog.Description</option>
                    }
                </select>
                <span asp-validation-for="MaritalStatus" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Nacionality" class="form-label text-muted text-sm">Nacionalidad</label>
                <select class="form-select" asp-for="Nacionality">
                    @foreach (CatalogDto catalog in _appCatalogs.Nationalities.OrderBy(x => x.Description))
                    {
                        <option value="@System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(catalog.Description.ToLower())">
                            @System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(catalog.Description.ToLower())
                        </option>
                    }
                </select>
                <span asp-validation-for="Nacionality" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Scholarship" class="form-label text-muted text-sm">Escolaridad</label>
                <select class="form-select" asp-for="Scholarship">
                    @foreach (CatalogDto catalog in _appCatalogs.Scholarships)
                    {
                        <option value="@catalog.Description">@catalog.Description</option>
                    }
                </select>
                <span asp-validation-for="Scholarship" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input asp-for="PhonesNumbers" class="form-control" aria-required="true" />
                <label asp-for="PhonesNumbers" class="form-label">Números de Teléfono</label>
                <span asp-validation-for="PhonesNumbers" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input asp-for="Ocupation" class="form-control" aria-required="true" />
                <label asp-for="Ocupation" class="form-label">Ocupación</label>
                <span asp-validation-for="Ocupation" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-floating mb-3">
                <input asp-for="WorkAddress" class="form-control" aria-required="true" />
                <label asp-for="WorkAddress" class="form-label">Lugar de Trabajo</label>
                <span asp-validation-for="WorkAddress" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Illness" class="form-control" aria-required="true" />
                <label asp-for="Illness" class="form-label">Padece de alguna enfermedad</label>
                <span asp-validation-for="Illness" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Treatment" class="form-control" aria-required="true" />
                <label asp-for="Treatment" class="form-label">Tratamiento</label>
                <span asp-validation-for="Treatment" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12">
            <div class="form-floating mb-3">
                <input asp-for="Observations" class="form-control" aria-required="true" />
                <label asp-for="Observations" class="form-label">Observaciones</label>
                <span asp-validation-for="Observations" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12">
            <div class="mb-3">
                <input asp-for="IsAPersonInCharge" type="checkbox" class="" aria-required="true" />
                <label asp-for="IsAPersonInCharge" class="form-label">¿Es persona a cargo?</label>
                <span asp-validation-for="IsAPersonInCharge" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12">
            <div class="text-center mb-3">
                <input type="submit" class="btn btn-primary" aria-required="true" value="Enviar información"/>
            </div>
        </div>
    </div>
</form>