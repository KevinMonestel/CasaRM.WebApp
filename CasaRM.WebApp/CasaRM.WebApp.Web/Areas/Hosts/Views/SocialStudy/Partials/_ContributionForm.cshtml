@using CasaRM.WebApp.Shared.Models.Catalog
@model ContributionFormViewModel
@inject ApplicationCatalog _appCatalogs

@{
}

<form id="contributionForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" aria-required="true" />
                <label asp-for="FullName" class="form-label">Nombre Completo</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-floating mb-3">
                <label asp-for="Relationship" class="form-label text-muted text-sm">Parentesco</label>
                <select class="form-select" asp-for="Relationship">
                    @foreach (CatalogDto catalog in _appCatalogs.Relationships)
                    {
                        <option value="@catalog.Description">@catalog.Description</option>
                    }
                </select>
                <span asp-validation-for="Relationship" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="Ocupation" class="form-control" aria-required="true" />
                <label asp-for="Ocupation" class="form-label">Ocupación</label>
                <span asp-validation-for="Ocupation" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-floating mb-3">
                <input asp-for="MonthlyContribution" class="form-control" aria-required="true" />
                <label asp-for="MonthlyContribution" class="form-label">Aporte Mensual</label>
                <span asp-validation-for="MonthlyContribution" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12">
            <input type="submit" value="Enviar información" class="btn btn-primary w-100"/>
        </div>
    </div>
</form>